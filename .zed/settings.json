{
  "languages": {
    "Python": {
      "language_servers": ["ty", "ruff", "basedpyright"],
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": { "name": "ruff" }
        },
        {
          "code_actions": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          }
        }
      ]
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 80,
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    }
  }
}
